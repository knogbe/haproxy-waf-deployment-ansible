vrrp_script chk_haproxy {
  script "killall -0 haproxy" # check the haproxy process
  interval 2 # every 2 seconds
  weight 2 # add 2 points if OK
}

vrrp_instance VI_1 {
  interface {{ vrrp_iface }}
  state {{ vrrp_state }}
  virtual_router_id 51
  priority {{ priority }}
  virtual_ipaddress {
  {% for vip in vips %}
      {{ vip.ipaddress }}  dev {{ vip.dev }}
  {% endfor %}
  }
  track_script {
    chk_haproxy
  }
}

